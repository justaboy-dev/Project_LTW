@using ProjectCCS.Models
@model ProjectCCS.Models.User
@{
ViewBag.Title = "Register";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <section class="login-main">
        <div class="box">
            <h2 class="box__title">Đăng ký</h2>
            <div class="box__body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken();

                    @Html.LabelFor(m => m.Name, new { @class = "register" })
                    @Html.TextBoxFor(m => m.Name, "", new { placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name)


                    @Html.LabelFor(m => m.Address, new { @class = "register" })
                    @Html.TextBoxFor(m => m.Address, "", new { placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Address)


                    @Html.LabelFor(m => m.Phone, new { @class = "register" })
                    @Html.TextBoxFor(m => m.Phone, "", new { placeholder = "Phone" })
                    @Html.ValidationMessageFor(m => m.Phone)


                    @Html.LabelFor(m => m.Email, new { @class = "register" })
                    @Html.TextBoxFor(m => m.Email, "", new { placeholder = "Email address" })
                    @Html.ValidationMessageFor(m => m.Email)


                    @Html.LabelFor(m => m.Password, new { @class = "register" })
                    @Html.TextBoxFor(m => m.Password, "", new { placeholder = "Password", type = "password", @class = "invalid" })
                    @Html.ValidationMessageFor(m => m.Password)

                    @Html.Label("Re-password", new { @class = "register" })
                    @Html.TextBox("Re-password", "", new { placeholder = "Password", type = "password", @class = "invalid" })
                    @Html.ValidationMessage("Re-password")
                    <input class="register" type="submit" value="Đăng ký">
                }
            </div>
        </div>
    </section>
</section>

