@model ProjectCCS.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="content">
        <section class="login-main">
            <div class="box">
                <h2 class="box__title">Đăng nhập</h2>
                <div class="box__body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken();
                        <div style="color:red" id="Message">@ViewBag.Message</div>
                        @Html.LabelFor(m => m.Email)
                        @Html.EditorFor(m => m.Email, new { placeholder = "Email address" })
                        @Html.ValidationMessageFor(m => m.Email)

                        @Html.LabelFor(m => m.Password)
                        @Html.EditorFor(m => m.Password, new { type = "password", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password)
                        <input type="submit" id="login" value="Đăng nhập">
                        <a href="@Url.Action("Register", "Home")"><input type="button" value="Đăng ký" /></a>
                    }
                </div>
            </div>
        </section>
    </section>

