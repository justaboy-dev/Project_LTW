@model ProjectCCS.Models.Product
@{
    ViewBag.Title = "editProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Dashbroad for user -->
<section class="user container flex">
    
    @Html.Partial("~/Views/Shared/_NavigationBar.cshtml")

    <div class="content">
        <!-- 75% -->
        <h3>Chỉnh sửa sản phẩm</h3>
        @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "edit" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            <div class="inputBox">
                <label for="">Tên sản phẩm</label>
                @Html.EditorFor(m => m.name, new { @autocomplete = "none" })
            </div>
            <div class="inputBox">
                <label for="">Mô tả</label>
                @Html.EditorFor(m => m.descriptions, new { @autocomplete = "none"})
            </div>
            <div class="inputBox">
                <label for="">Giá</label>
                @Html.EditorFor(m => m.price, new { @autocomplete = "none" })
            </div>
            <div class="inputBox">
                <label for="">Hình ảnh:</label>
                <input type="file" id="fileUpload" accept="image/png, image/jpeg" />
                @Html.EditorFor(m => m.image)
            </div>
            <div class="groupBox" >
                <img src="@Html.DisplayFor(m => m .image)" alt="" id="demo-image">
            </div>
            <button type="submit">Cập nhật</button>
        }
    </div>
</section>

