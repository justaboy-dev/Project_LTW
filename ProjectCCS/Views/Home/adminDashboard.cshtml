    </div>
    <div class="content">
        <!-- 75% -->
        <h3>Thông tin tài khoản</h3>
        <form action="">
            <div class="inputBox">
                <label for="">Họ tên</label>
                <input type="text" name="ten" value="Quang Huy" autocomplete="none">
            </div>
            <div class="inputBox">
                <label for="">Số điện thoại</label>
                <input type="text" name="sdt" value="039268723">
            </div>
            <div class="inputBox">
                <label for="">Email</label>
                <input type="text" name="email" value="Huybest10@gmail.com">
            </div>
            <div class="inputBox">
                <label for="">Giới tính</label>
                <input type="radio" name="gioiTinh" value="nam" checked>
                <label for="nam">Nam</label>
                <input type="radio" name="gioiTinh" value="nu">
                <label for="nu">Nữ</label>
            </div>
            <div class="inputBox">
                <label for="">dia chi</label>
                <textarea name="moTa" cols="10" rows="3">asdsadsa</textarea>
            </div>
            <div class="inputBox">
                <label for="">Ngày sinh</label>
                <!-- max time = date.now -->
                <input type="date" name="ngaySinh" value="2018-07-22" min="1970-01-01" max="2021-03-30">
            </div>
            <button type="submit">Cập nhật</button>
        </form>
    </div>
</section>

