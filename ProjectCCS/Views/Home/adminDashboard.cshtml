
@{
    ViewBag.Title = "Trang Quản Trị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="admin container flex">
    <div class="nav">
        <!-- 25% -->
        <h4 class="name-user">Chao Huy</h4>
        <ul>
            <li><i class="fa fa-user-circle" aria-hidden="true"></i><a href="#">Thông tin tài khoản</a></li>
            <li><i class="fa fa-cart-arrow-down" aria-hidden="true"></i><a href="@Url.Action("ShoppingCart","Home")">Giỏ hàng</a></li>
            <li><i class="fa fa-key"></i><a href="@Url.Action("ChangePassword","Home")">Đổi mật khẩu</a></li>
            <li><i class="fa fa-users-cog"></i><a href="@Url.Action("UserManager","Home")">Quản lý người dùng</a></li>
            <li><i class="fab fa-product-hunt"></i><a href="@Url.Action("ProductManager","Home")">Quản lý sản phẩm</a></li>
