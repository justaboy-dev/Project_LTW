@model ProjectCCS.Models.User
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="user container flex">
    @Html.Partial("~/Views/Shared/_NavigationBar.cshtml")
    <div class="content">
        <!-- 75% -->
        <h3>Đổi mật khẩu</h3>
        @using (Html.BeginForm())
        {
            <div class="text-danger">@Html.ValidationSummary()</div>
            <div class="inputBox">
                <label class="label-info">Mật khẩu cũ</label>
                <input type="password" name="oldpass" required>
            </div>
            <div class="inputBox">
                <label>Mật khẩu mới</label>
                <input type="password" name="newpass" id="Password" required>
            </div>
            <div class="inputBox">
                <label>Nhập lại mật khẩu mới</label>
                <input type="password" name="renewpass" id="Re-password" required>
            </div>
            <button type="submit">Cập nhật</button>
        }
    </div>
</section>
