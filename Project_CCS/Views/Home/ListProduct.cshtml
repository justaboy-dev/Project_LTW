@model IEnumerable<Project_CCS.Models.Product>
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cat = ViewBag.categories as IEnumerable<Project_CCS.Models.Category>;
}

<!-- Categouries and product section -->
<h1 class="main_title">COFFEE & CAKES<i class="fa fa-fire" style="color: red;"></i></h1>
<section class="list_products flex container">
    <div class="left-side">
        <!-- Contain Categories 25%-->
        <h3>Danh mục</h3>
        <ul>
            <li><a href=@Url.Action("ListProduct","Home")>Tất cả</a></li>
            @foreach (var item in cat)
            {
               <li><a href=@Url.Action("Filter","Home", new {id=item.id })>@item.name</a></li>
            }
        </ul>
    </div>
    <div class="right-side">
        <!-- Contains products 75% -->
        <div class="products__container">
            @foreach (var product in (IEnumerable<Project_CCS.Models.Product>) Model)
            {
                <div class="item-product">
                    <div class="item__content">
                        <img src="@product.image" alt="">
                        <div class="item__content__hover">
                            <a href="" class="cart btn-detail"><i class="fa fa-shopping-cart" aria-hidden="true"></i>Thêm vào giỏ</a>
                            <a href="/Home/detailProduct/@product.id" class="detail btn-detail"><i class="fa fa-eye"></i>Xem chi tiết</a>
                        </div>
                    </div>
                    <div class="item-product__details">
                        <a href="/">@product.name</a>
                        <span>@product.price đ</span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


@Html.Partial("~/Views/Shared/_HotProduct.cshtml")