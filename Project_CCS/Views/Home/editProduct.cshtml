@model Project_CCS.Models.Product
@{
    ViewBag.Title = "editProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Dashbroad for user -->
<section class="user container flex">
    <div class="nav">
        <!-- 25% -->
        <h4 class="name-user">Chào Huy</h4>
        <ul>
            <li><i class="fa fa-user-circle" aria-hidden="true"></i><a href="#">Thông tin tài khoản</a></li>
            <li><i class="fa fa-history"></i><a href="">Lịch sử mua hàng</a></li>
            <li><i class="fa fa-cart-arrow-down" aria-hidden="true"></i><a href="giohang.html">Giỏ hàng</a></li>
            <li><i class="fa fa-key"></i><a href="/user-doimk.html">Đổi mật khẩu</a></li>
            <li><i class="fa fa-users-cog"></i><a href="/">Quản lý người dùng</a></li>
            <li><i class="fab fa-product-hunt"></i><a href="/manager-products.html">Quản lý sản phẩm</a></li>
        </ul>
    </div>
    <div class="content">
        <!-- 75% -->
        <h3>Chỉnh sửa sản phẩm</h3>
        @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @class = "edit" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            <div class="inputBox">
                <label for="">Tên sản phẩm</label>
                @Html.EditorFor(m => m.name, new { @autocomplete = "none" })
            </div>
            <div class="inputBox">
                <label for="">Mô tả</label>
                @Html.EditorFor(m => m.descriptions, new { @autocomplete = "none" })
            </div>
            <div class="inputBox">
                <label for="">Giá</label>
                @Html.EditorFor(m => m.price, new { @autocomplete = "none" })
            </div>
            <div class="inputBox">
                <label for="">Hình ảnh:</label>
                <input type="file" id="fileUpload" accept="image/png, image/jpeg" />
                @Html.EditorFor(m => m.image)
            </div>
            <div class="groupBox" >
                <img src="@Html.DisplayFor(m => m .image)" alt="" id="demo-image">
            </div>
            <button type="submit">Cập nhật</button>
        }
    </div>
</section>

